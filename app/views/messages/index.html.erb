<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= link_to "Show", message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
